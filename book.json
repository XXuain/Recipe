{
    "title": "Recipe",
    "description": "test Git book + GitHub active + GitHub page",
    "author": "helight",
    "language": "zh-hant",
    "ignores": ["node_modules"],
    "plugins": [
        "search",
        "sharing",
        "expandable-chapters",
        "splitter",
        "anchor-navigation-ex",
        "page-footer-ex",
        "favicon-absolute",
        "github-buttons",
        "-disqus",
        "-codeblock-filename"
    ],
    "pluginsConfig": {
        "favicon-absolute": {
            "favicon": "/favicon.ico",
            "bookmark": "/bookmark.ico",
            "appleTouchIcon152": "/apple-touch-icon-152.png",
            "appleTouchIconPrecomposed152": "/apple-touch-icon-precomposed-152.png",
            "appleTouchIconMore": {
                "120x120": "/apple-touch-icon-120.png",
                "180x180": "/apple-touch-icon-180.png"
            },
            "appleTouchIconPrecomposedMore": {
                "120x120": "/apple-touch-icon-precomposed-120.png",
                "180x180": "/apple-touch-icon-precomposed-180.png"
            }
        },
        "github-buttons": {
            "buttons": [{
                "user": "kimi0230",
                "repo": "Recipe",
                "type": "star",
                "size": "small"
            }]
        },
        "disqus": {
            "shortName": "Kimi'sGitbook"
        }
    }
}